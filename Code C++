DataType Part 2

#include <iostream>
#include<cmath>
using namespace std;
int main(){
    
    //User Inputted Data
    string food[10] = {};
    cout << "Please fill up the number 2 of the array"<<endl;
    getline(cin,food[2]);
    cout << "Please fill up the number 3 of the array"<<endl;
    getline(cin,food[3]);
    
    cout<<"The food in the list : "<<endl;
    cout<<food[2]<<endl;
    cout<<food[3]<<endl;
    
    return 0 ;

}
