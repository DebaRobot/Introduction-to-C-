Working with Multiple Functions Part 2

#include <iostream>
#include<cmath>
using namespace std;

int add(int a, int b, int c){
    cout << a + b + c << endl;
    cout << a - b - c << endl;
    cout << a * b * c << endl;
    cout << a / b / c << endl;
}

int main(){ //principle function

    int var1 = 5 ;
    //cin >> var1
    int var2 = 6 ;
    //cin >> var2
    int var3 = 7 ;
    //cin >> var3
    
    cout << "The Basic Operations : "<<endl;
    add(var1, var2, var3);
    
    //add(5, 5, 7);
    return 0 ;
}
