Understanding the IF Statement Part 1

#include <iostream>
#include<cmath>
using namespace std;

int main(){ 
    //string val1 = "yes";
    string val1  = "no";
    int val2 = 5;
    int val3 = 6;
    
    if(val1 == "yes" && val2 > 4 && val2 == 6){ // OR operator can be used
        cout << "great" << endl;
    }else{
        cout<<"bad"<<endl;
    }
    return 0 ;
}
----------------------------------------------------------------------------------------------------------------
Understanding the IF Statement Part 2

#include <iostream>
#include<cmath>
using namespace std;

int main(){ 
    
    cout<<"do you love Pizza"<<endl;
    string val1;
    getline(cin, val1);
    
    cout<<"do you love burgurs"<<endl;
    string val2;
    getline(cin, val2);
    
    if(val1 == "yes" && val2 == "yes"){
        cout<<"You love pizza and burgur"<<endl;
    }else if(val1 == "yes" && val2 != "yes"){
        cout<<"You only love pizza"<<endl;
    }else if(val1 != "yes" && val2 == "yes"){
        cout<<"You only love burgur"<<endl;
    }else{
        cout<<"You love none of these"<<endl;
    }
    
    return 0 ;
}
------------------------------------------------------------------------------------------
Creating a Coffee Selectors

#include <iostream>
using namespace std;

int main() {
    
    double cP = 2.00;
    cout<<"do you like to have a coffee"<<endl;
    string q1;
    getline(cin, q1);
    
    cout<<"Enter your balance "<<endl;
    double balance;
    cin>>balance;
    
    if(q1 == "yes" && balance >= cP){
        cout<<" Here is your coffee "<<endl;
        cout<<" New balance of User : "<<balance - cP<<endl;
    }
    else if (q1 == "yes" && balance < cP){
        cout<<" You dont have enough money sorry "<<endl;
    }
    else{
        cout<<"Have a good Day"<<endl;
    }
    return 0;
}
----------------------------------------------------------------------------------------------
Understanding For loop Part 1

// Online C++ compiler to run C++ program online
#include <iostream>
#include<cmath>

using namespace std;

int main() {

    int val1 = 75 ;

    // counter loop
    //for(int i = 0; i < 50; i += 3 )
    for(int i = 0; i < val1; i += 3 ){
        cout <<"The number "<<i<<" is still smaller than "<< val1 << endl;
    }
    return 0;
}
--------------------------------------------------------------------------------------------------------
Understanding While loop Part 2 ( Creating a password )

// Online C++ compiler to run C++ program online
#include <iostream>
#include<cmath>

using namespace std;

int main() {

    cout<<" create a password " <<endl;
    string pass;
    getline(cin, pass);

    cout<<"What is the Password"<<endl;
    string i;
    getline(cin, i);

    while(i != pass){
        cout << " Wrong Password!! , Please try again"<< endl;
        getline(cin,i);
    }

    cout<<" You are in !!" << endl;

    return 0;
 }
---------------------------------------------------------------------------------------------
Generating Different Colour Using Switch Statement

#include <iostream>
#include<cmath>

using namespace std;

string color(int col){
string colorful;

switch(col){
    case 1:
        colorful = "red";
        break;
    
case 2:
      colorful = "yellow";
      break;
    
case 3:
      colorful = "green";
      break;

default:
      colorful = "Wrong Number";
  }

return colorful;
}

int main() {

    cout<<color(1)<<endl;
    cout<<color(3)<<endl;
    cout<<color(5)<<endl;

    return 0;
}
