#include <iostream>
#include<cmath>
using namespace std;
int main(){
    cout << "hey what do you want to eat ? ";
    string ans1;
    getline(cin, ans1);
    
    cout << "How many slices do you want ? ";
    int ans2;
    cin >> ans2;
    
    cout << "You want to eat "<<ans2<<" slices of "<<ans1<<endl;
    
}
