DataType Part 1

#include <iostream>
#include<cmath>
using namespace std;
int main(){
    // more than one variable in an array
    string  food[] = {"Pasta","Pizza","Burgur","Susee","Lasagna"};
    
    string movie[10] = {};
    movie[0] = "Mvg";
    movie[4] = "Kmg";
    movie[1] = "Rft";
    
    cout<<food[0]<<endl;
    cout<<food[4]<<endl;
    
    cout<<movie[0]<<endl;
    
    return 0 ;

}
